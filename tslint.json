{
    "extends": "tslint-config-standard",
    "rules": {
        "indent": [
            true,
            "spaces"
        ],
        "ter-indent": [
            true,
            4
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "ignore"
            }
        ],
        "no-for-in": true,
        "semicolon": [
            true,
            "always"
        ],
        "quotemark": [
            true,
            "double"
        ]
    }
}